<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/daftarMuridLL"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#FFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/daftarMuridRL">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/item_image"
            android:src="@drawable/std"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/namaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMA"
            android:textSize="20sp"
            android:layout_toRightOf="@id/item_image"
            android:layout_alignParentTop="true"
            android:textColor="#000"/>


        <TextView
            android:id="@+id/bidangTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaTV"
            android:text="Bidang"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/jenjangTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bidangTV"
            android:text="jenjang"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/kontakMuridTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jenjangTV"
            android:text="Kontak murid"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#000"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>