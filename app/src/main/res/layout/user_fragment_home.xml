<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".GuruFragmentHome"
    android:background="@color/colorMain">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            android:gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo" />

            <TextView
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apa yang ingin Anda lakukan hari ini?"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorTitleWhite"/>

            <Button
                android:id="@+id/btnJadwal"
                android:layout_marginTop="45dp"
                android:background="@drawable/mybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/payment_method"
                android:text="JADWAL MENGAJAR"
                android:textColor="@color/colorMain"/>

            <Button
                android:id="@+id/btnMurid"
                android:layout_marginTop="20dp"
                android:background="@drawable/mybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/payment_method"
                android:text="DAFTAR MURID"
                android:textColor="@color/colorMain"/>

            <Button
                android:id="@+id/btnPendapatan"
                android:layout_marginTop="20dp"
                android:background="@drawable/mybtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:drawableLeft="@drawable/payment_method"
                android:text="JUMLAH PENDAPATAN"
                android:textColor="@color/colorMain"/>

        </LinearLayout>

