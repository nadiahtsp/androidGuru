<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/daftarMuridLL"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp"
    android:clickable="true">

    <RelativeLayout
        android:background="@color/colorMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/daftarMuridRL">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:id="@+id/item_image"
            android:src="@drawable/list"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/namaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAMA"
            android:textSize="17sp"
            android:layout_toRightOf="@id/item_image"
            android:layout_alignParentTop="true"
            android:textColor="#fff"/>


        <TextView
            android:id="@+id/bidangTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/namaTV"
            android:text="Bidang"
            android:textSize="17sp"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/jenjangTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bidangTV"
            android:text="jenjang"
            android:textSize="17sp"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tanggalTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jenjangTV"
            android:text="tanggal"
            android:textSize="17sp"
            android:layout_toRightOf="@id/item_image"
            android:textColor="#000"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>